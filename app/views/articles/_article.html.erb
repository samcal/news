<%= link_to article.is_draft ? edit_article_path(article) : article_path(article), class: "no-underline" do %>
	<div class='col-md-4'>
		<div class='article-thumbnail card'>
      <% if article.image.exists? %>
  			<%= image_tag article.image.url(:thumb) %>
      <% else %>
        <img src='http://placehold.it/208x160'>
      <% end %>
			<h1><%= article.short_title %></h1>
      <div class='sub'>
        <% if article.is_draft %>
          Draft
        <% else %>
          <% if article.is_published %>
            <div class='date'><%= article.created_at.strftime("%m/%d/%Y") %></div>
            <div class='author'><%= article.author_name %></div>
          <% else %>
            <% if article.user == current_user %>
              In Review
            <% else %>
              Publish Article
            <% end %>
          <% end %>
        <% end %>
      </div>
		</div>
	</div>
<% end %>