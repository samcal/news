<%= form_for :article, url: articles_path, :html => {:multipart => true} do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %><br />
	</p>

	<p>
		<%= f.label :author_name %><br />
		<%= f.text_field :author_name %><br />
	</p>

	<p>
		<%= f.label :category_id %><br />
		<%= f.select :category_id, @categories.map{ |c| [c.name, c.id] }, :prompt => true %>
	</p>

	<p>
		<%= f.label :image %><br />
		<%= f.file_field :image %><br />
	</p>

	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text %><br />
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>