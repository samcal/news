<!DOCTYPE html>
<html>
<head>
  <title>M-A Bear News</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= favicon_link_tag '/favicon.ico' %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, user-scalable=no">
</head>
<body>
	<header>
		<div class='logo'>
			<%= link_to root_path do %><h1>M-A Bear News</h1><% end %>
		</div>
	</header>
	<% if current_page?(root_path) %>
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
		  <!-- Indicators -->
		  <ol class="carousel-indicators">
		  	<% @categories.each_with_index do |c, index| %>
		  		<% if c.articles.last %>
		    	<li data-target="#carousel-example-generic" data-slide-to="<%= index %>" <% if index == 0 %>class="active"<% end %>></li>
		    	<% end %>
		    <% end %>
		  </ol>

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner">
	    	<% @categories.each_with_index do |c, index| %>
	    		<% if c.articles.last %>
	    			<div class="item<% if index == 0 %> active<% end %>">
		      	<%= link_to article_path(c.articles.last), class: "no-underline" do %>
		      		<%= image_tag c.articles.last.image.url %>
		      	<% end %>
		      	<div class="carousel-caption">
		      	 	<h3><%= c.name %></h3>
		      	 	<p><%= c.articles.last.title %></p>
		      	</div>
		      	</div>
		      <% end %>
	      <% end %>
		  </div>

		  <!-- Controls -->
		  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
		    <span class="glyphicon glyphicon-chevron-left"></span>
		  </a>
		  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
		    <span class="glyphicon glyphicon-chevron-right"></span>
		  </a>
		</div>
	<% end %>
	<div class='container'>
		<% if notice %>
			<p class="notice"><%= notice %></p>
		<% end %>
		<% if alert %>
			<p class="alert"><%= alert %></p>
		<% end %>
		<div class='row'>
			<div class='col-md-2'>
				<ul class='nav nav-pills nav-stacked'>
					<li <% unless @current_category %>class='active'<% end %>><%= link_to "Most Recent", root_path %></li>
					<% @categories.each do |c| %>
						<li <% if c == @current_category %>class='active'<% end %>><%= link_to c.name, category_path(c) %></li>
					<% end %>
				</ul>
			</div>
			<div class='col-md-10 col-lg-8'>
				<%= yield %>
			</div>
		</div>
	</div>
	<footer>
		<ul>
			<li>&copy; Menlo-Atherton High School. All Rights Reserved.</li>
			<% if user_signed_in? %>
				<li>Signed In as <strong><%= current_user.email %></strong></li>
				<li><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
			<% else %>
				<li><%= link_to "Log In", new_user_session_path %></li>
			<% end %>
		</ul>
	</footer>
</body>
</html>
